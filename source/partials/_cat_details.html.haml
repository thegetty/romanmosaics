%ul.cat-details
  - if current_page.data.cat.is_a? Array
    %li
      %strong= "#{current_cat.cat}. #{current_cat.title}"
  %li= "#{current_cat.culture}, #{current_cat.location}, #{current_cat.date_txt}"
  %li= "#{current_cat.material}, #{current_cat.dimensions[0]} cm Ã— #{current_cat.dimensions[1]} cm"
  %li= current_cat.inv
  - if current_cat.credit
    %li= current_cat.credit
  %li= partial "partials/cat_scale", :locals => { :current_cat => current_cat }
